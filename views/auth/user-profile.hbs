<h1>User profile</h1>

    <h2>Info</h2>

    <p>Email: <span>{{_locals.session.currentUser.email}}</span></p>

    <h2>Settings</h2>
    
    <div class="settings-feed-reader-group"></div>
        <form method="POST" action="/auth/user-profile/">
            <label>Feed Reader: Group (true = Group by feed / false = Do not group feeds)</label>
            <input type="checkbox" name="settingsGroup" {{#if _locals.session.currentUser.settings.group}}checked{{/if}}>
            <input type="submit">
        </form>
    </div>

{{#if feeds}}
    <h2>My Feeds</h2>
    <a href="/feeds/create">Add a new Feed</a>

    <div id="user-feed-list">
        {{#each feeds}}
            <div>
                {{#if faviconUrl}}
                    <img src="{{faviconUrl}}" alt="{{title}} favicon">
                {{/if}}
                <span>{{title}} - {{url}}</span>
                <a href="/feeds/edit/{{_id}}">Edit</a>
                <form method ="POST" action="/feeds/delete/{{_id}}">
                    <button class="link" type="submit"> Delete </button>
                </form>
            </div>
        {{/each}}
    </div>
{{else}}
    <h2>No Feeds</h2>
    <a href="/feeds/create">Add Feed</a>
{{/if}}