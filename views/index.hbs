{{!-- {{log this}} --}}

<header>
    {{#if session.currentUser}}
    <div>
        <a href="/reading-list">📑Reading list</a>
        <a href="/auth/user-profile">⚙️User Profile</a>
    </div>

    <span><strong>Your Feeds Reader, {{_locals.session.currentUser.username}}!</strong></span>

    <a href="/auth/logout">Logout from {{_locals.session.currentUser.email}}</a>
    {{else}}
        <p>&nbsp;</p>
        <span><strong>Your Feeds Reader</strong></span>
        <p>&nbsp;</p>
    {{/if}}
</header>

    {{#if session.currentUser}}
        {{> feeds this}}
    {{else}}
        <div class="login">
            <p>Please login to see your feeds.</p>
            <br><br>

            <form action="/auth/login" method="POST">
                <label> Email
                <input type="email" name="email" placeholder="Your email" required />
                </label>

                <label> Password
                <input type="password" name="password" placeholder="Your password" required />
                </label>

                <button type="submit">Log In</button>


                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </form>

            <p>Don't have an account, please <a href="/auth/signup">Sign up</a>.</p>
        </div>
    {{/if}}
