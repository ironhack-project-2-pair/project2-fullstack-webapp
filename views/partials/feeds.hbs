{{#each this.feeds}}
    {{#if ../_locals.session.currentUser.settings.group}}
        <div id="{{this.id}}">
    {{else}}
        <div id="all-feeds-items">
    {{/if}}
        <h2>
            {{#if faviconUrl}}
                <img src="{{faviconUrl}}" alt="{{title}} favicon">
            {{/if}}
            {{title}} ({{items.length}})
        </h2>
        <ul>
        {{#each items}}
            <li data-index={{@index}}>
                <span>[
                    <a onclick="(() => patchFeedReadDate('{{feedId}}','{{isoDate}}','{{@index}}'))()" 
                    href="javascript:void(0);" title="Remove all items older than this one (this one included)"></a>>
                        {{formatedDate}}</a>
                     | 
                    <a onclick="(() => addToReadList('{{title}}','{{link}}', '{{../id}}'))()" 
                    href="javascript:void(0);" title="Add to the reading list" >
                        ðŸ“‘</a> ]
                </span>
                <span>
                    <a href="{{link}}" target="_blank">
                        {{#if faviconUrl}}
                            <img src="{{faviconUrl}}" alt="{{title}} favicon">
                        {{/if}}
                        {{!-- use path segment to reference the parent template scope --}}
                        {{!-- {{#unless ../../_locals.session.currentUser.settings.group}}{{feedTitle}} - {{/unless}}{{title}} --}}
                        {{!-- ot use absolute path --}}
                        {{title}}</a>
                    <span class="feed-name">
                        {{#unless @root._locals.session.currentUser.settings.group}}
                            - {{feedTitle}}
                        {{/unless}}
                    </span>
                </span>
            </li>
        {{/each}}
        </ul>
    </div>
{{else}}
    <p>All feeds with error ðŸ˜¥</p>
{{/each}}

{{#if this.feedsInError}}
    <div>
        <h3>Feeds with error</h3>
        <ul>
        {{#each this.feedsInError}}
            <li>
                {{url}}
                <br/>
                {{errorMessage}}
            </li>
        {{/each}}
        </ul>
        
    </div>
{{/if}}